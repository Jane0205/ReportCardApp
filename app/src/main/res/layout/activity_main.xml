<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="25dp"
    tools:context="com.example.android.reportcardapp.MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : " />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/name" />

    <TextView
        android:id="@+id/major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:text="Major : " />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/major" />

    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:text="Grade : " />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/grade" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <!-- Row 0 -->

        <TableRow>

            <TextView
                android:id="@+id/textview1"
                android:layout_weight="2"
                android:background="#FFFFFF"
                android:text="Subject"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textview2"
                android:layout_weight="2"
                android:text="Count"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textview3"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="Grade"
                android:textColor="#000000" />
        </TableRow>
        <!-- Row 1 -->
        <TableRow>

            <TextView
                android:id="@+id/textview5"
                android:layout_weight="2"
                android:background="#FFFF00"
                android:text="Computer Structure"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textview6"
                android:layout_weight="2"
                android:background="#00FF00"
                android:text="Row1 : Column1"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textview7"
                android:layout_weight="1"
                android:text="Row1 : Column2"
                android:textColor="#FF0000" />/>

        </TableRow>

    </TableLayout>

</RelativeLayout>

